<div class="container">
	<%= simple_form_for @vehicle, :html => { :multipart => true } do |f| %>
	<div class="row">
	  <div class="col-md-4">
	  	<%= f.input :name, label: 'Наименование автомобиля', input_html: { class: 'form-control' }, required: true %>
	  </div>
	  <div class="col-md-4">
	  	<%= f.input :gos_num, 
	  	            label: 'Гос. номер', 
	  	            input_html: { class: 'form-control' },
	  				placeholder: 'T116ЕЕ 16' %>
	  </div>
	</div><br>
	<div class="row">
		<div class="col-md-4">
	  		<%= f.input :pts, 
	  					label: 'Номер ПТС', 
	  					input_html: { class: 'form-control' },
	  					placeholder: '23 TB 234234' %>
	  	</div>
	  	<div class="col-md-4">
	  		<%= f.input :pts_date, label: 'Дата ПТС', as: :date %>
	  	</div>
	</div><br>

	<%= f.fields_for :vehicle_attachments do |ff| %>
		<% unless ff.object.new_record? %>
			  <%= link_to image_tag(ff.object.image.url, class: "img-thumbnail"), ff.object.image.url %>
			  	<%= ff.check_box :_destroy %>
              	<%= ff.label :_destroy, "Remove" %>
		<% end %>
	<% end %>

	<p>
		<%= link_to_add_fields "Добавить изображение", f, :vehicle_attachments %>
	</p>

	<div class="action_btns">
	  <%= f.button :submit, class: "btn btn-success" %>
	  <button class="btn btn-default">
	  	<%= link_to 'Назад', root_path %>
	  </button> 
	  <% end %>
	</div>	
</div>