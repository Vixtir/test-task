<div class="container">
	<%= simple_form_for @vehicle, :html => { :multipart => true } do |f| %>
	<div class="row">
	  <div class="col-md-4">
	  	<%= f.input :name, label: 'Наименование автомобиля', input_html: { class: 'form-control' }, required: true %>
	  </div>
	  <div class="col-md-4">
	  	<%= f.input :gos_num, label: 'Гос. номер', input_html: { class: 'form-control' } %>
	  </div>
	</div><br>
	<div class="row">
		<div class="col-md-4">
	  		<%= f.input :pts, label: 'Номер ПТС', input_html: { class: 'form-control' } %>
	  	</div>
	  	<div class="col-md-4">
	  		<%= f.input :pts_date, label: 'Дата ПТС', as: :date %>
	  	</div>
	</div><br>

	<%= f.fields_for :vehicle_attachments, @vehicle.vehicle_attachments do |asset_fields| %>
		<% unless asset_fields.object.new_record? %>
				<%= link_to image_tag(asset_fields.object.image.url, class: "img-thumbnail"), asset_fields.object.image.url %>
		<% end %>
	<% end %>

	<h4> Добавить изображений </h4>

    <%= f.fields_for :vehicle_attachments, @vehicle.vehicle_attachments do |asset_fields| %>
		<% if asset_fields.object.new_record? %>
			<p><%= asset_fields.file_field :image %></p>
		<% end %>
	<% end %>
	
	<%= f.button :submit %> <%= link_to 'Назад', root_path %>
	<% end %>	
</div>


